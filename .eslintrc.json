{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "root": true,
  "env": {
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": "warn",
    "no-console": "off",
    "no-undef": "off",
    "@typescript-eslint/no-unused-vars": ["warn", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }],
    "@typescript-eslint/no-empty-interface": "warn"
  },
  "ignorePatterns": [
    "node_modules/*",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "types/*.d.ts",
    "*.config.js"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
} 